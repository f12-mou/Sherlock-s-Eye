<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>UPDATE CASE IN SHERLOCK'S EYE</h3>
                </div>
                <div class="card-body">
            
                            <form action="/api/case/updateCase/<%= curr_case_id%>" method="post">
                              
                                <div class="input-group form-group">
                                    <input type="text" class="form-control" id="title" name="title" placeholder="Title *" required
                                        value="<%= (typeof form != 'undefined')? form.title : '' %>">
                                </div>
                                <div class="input-group form-group">
                                    <input type="text" class="form-control" id="description" name="description" placeholder="Description *" required
                                        value="<%= (typeof form != 'undefined')? form.description : '' %>">

                                </div >
                               <div class="input-group form-group">
                                    <select class="form-control" aria-label="default select example" name="method">
                                        <option value="none" selected disabled hidden>Method</option>
                                        <option value="Observation Method"  >Observation Method</option>
                                        <option value="Interview Method" >Interview Method</option>
                                        <option value="The Questionnaire Method" >The Questionnaire Method</option>
                                        <option value="Projective Techniques" >Projective Techniques</option>
                                        <option value=" Scaling Technique" > Scaling Technique</option>
                                        <option value="Sampling Method" >Sampling Method</option>
                                        <option value=" Case Study Method" > Case Study Method</option>
                                      </select>
                                </div>
                               
                                
                                <div class="input-group form-group">
                                    <input type="text" class="form-control" id="resourceTitle" name="resourceTitle" placeholder="Resource Title*" required
                                        value="<%= (typeof form != 'undefined')? form.resources : '' %>">
                                </div>
                                <div class="input-group form-group">
                                    <input type="text" class="form-control" id="resourceLink" name="resourceLink" placeholder="Resources Link*" required
                                        value="<%= (typeof form != 'undefined')? form.resources : '' %>">
                                </div>
                                <div class="input-group form-group">
                                    <input type="text" class="form-control" id="resourceDesc" name="resourceDesc" placeholder="ResourceDescription*" required
                                        value="<%= (typeof form != 'undefined')? form.resources : '' %>">
                                </div>

                                <div class="input-group form-group">
                                    <input type="text" class="form-control" id="progressRate" name="progressRate" placeholder="Progress Rate*" required
                                        value="<%= (typeof form != 'undefined')? form.resources : '' %>">
                                </div>

                                
                                 <div class="form-group">
                                    <input type="submit" value="Submit" class="btn float-right login_btn">
                                </div>
                            </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Have any confusion regarding the fields?<a href="/api/auth/helpPage">Help Page</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>